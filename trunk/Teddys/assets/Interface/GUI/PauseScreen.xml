<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty.xsd http://nifty-gui.sourceforge.net/nifty.xsd">

  <useControls filename="nifty-default-controls.xml"/>
  <useStyles filename="nifty-default-styles.xml"/>
  
  <screen id="PAUSE_MENU" controller="edu.teddys.menu.PauseMenu">
      
    <layer id="background" backgroundColor="#0000">
       
    </layer>
    
    <layer id="foreground" backgroundColor="#0000" childLayout="vertical">
        
        <panel id="top_panel" height="10%" width="75%" align="center" childLayout="center" backgroundColor="#0000"/>
        
        <panel id="mid_panel" height="80%" width="75%" align="center" childLayout="center" backgroundColor="#8889">  
        
        </panel>
        
        <panel id="bottom_panel" height="10%" width="75%" align="center" childLayout="center" backgroundColor="#0000"> 
        
        </panel>
        
    </layer>
    
    <layer id="entries" backgroundColor="#0000" childLayout="vertical">
    
        <panel id="entries_top_panel" height="10%" width="75%" align="center" childLayout="center" backgroundColor="#0000"/>
        
        <panel id="entries_mid_panel" height="80%" width="75%" align="center" childLayout="horizontal" backgroundColor="#0000"> 
            
            <control name="button" label="Return" id="create_button" align="center" valign="top" visibleToMouse="true">
                <interact onClick="returnToGame()"/>
            </control>
            
            <control name="button" label="Options" id="options_button" align="center" valign="top" visibleToMouse="true">
                <interact onClick="showOptionsScreen()"/>
            </control>
            
            <control name="button" label="Disconnect" id="credits_button" align="center" valign="top" visibleToMouse="true">
                <interact onClick="disconnect()"/>
            </control>
            
            <control name="button" label="Exit" id="exit_button" align="center" valign="top" visibleToMouse="true">
                <interact onClick="exit()"/>
            </control>
            
        </panel>
        
        <panel id="entries_bottom_panel" height="10%" width="75%" align="center" childLayout="center" backgroundColor="#0000"/>
        
    </layer>
    
  </screen>

</nifty>