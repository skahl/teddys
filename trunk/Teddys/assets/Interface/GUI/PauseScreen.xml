<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty.xsd http://nifty-gui.sourceforge.net/nifty.xsd">

    <useControls filename="nifty-default-controls.xml"/>
    <useStyles filename="nifty-default-styles.xml"/>
  
    <screen id="PAUSE_MENU" controller="edu.teddys.menu.PauseMenu">
      
        <layer id="background" backgroundColor="#0000">
       
        </layer>
    
        <layer id="foreground" backgroundColor="#0000" childLayout="vertical">
        
            <panel id="top_panel" height="10%" width="75%" align="center" childLayout="center" backgroundColor="#0000"/>
        
            <panel id="mid_panel" height="80%" width="75%" align="center" childLayout="center" backgroundColor="#8889">  
        
            </panel>
        
            <panel id="bottom_panel" height="10%" width="75%" align="center" childLayout="center" backgroundColor="#0000"> 
        
            </panel>
        
        </layer>
    
        <layer id="entries" backgroundColor="#0000" childLayout="vertical">
    
            <panel id="entries_top_panel" height="10%" width="75%" align="center" childLayout="center" backgroundColor="#0000"/>
        
            <panel id="button_panel" height="10%" width="75%" align="center" childLayout="horizontal" backgroundColor="#0000"> 
            
                <control name="button" label="Return" id="create_button" width="33.333333%" align="left" valign="top" visibleToMouse="true">
                    <interact onClick="returnToGame()"/>
                </control>
            
                <control name="button" label="Disconnect" id="disconnect_button" width="33.333333%" align="center" valign="top" visibleToMouse="true">
                    <interact onClick="disconnect()"/>
                </control>
            
                <control name="button" label="Exit" id="exit_button" width="33.333333%" align="right" valign="top" visibleToMouse="true">
                    <interact onClick="exit()"/>
                </control>
            
            </panel>
        
            <panel id="scores_panel" height="70%" width="75%" align="center" childLayout="horizontal" backgroundColor="#0000">
                
                <panel id="column0" width="25%" childLayout="vertical">
                    <text text="Rank" font="Interface/Fonts/Default.fnt" align="left"/>
                    
                    <panel id="spacer" height="5%"/>
                    <text id="rank0" text="1" font="Interface/Fonts/Default.fnt" align="left"/>
                    <panel id="spacer" height="5%"/>
                    <text id="rank1" text="" font="Interface/Fonts/Default.fnt" align="left"/>
                    <panel id="spacer" height="5%"/>
                    <text id="rank2" text="" font="Interface/Fonts/Default.fnt" align="left"/>
                    <panel id="spacer" height="5%"/>
                    <text id="rank3" text="" font="Interface/Fonts/Default.fnt" align="left"/>
                    <panel id="spacer" height="5%"/>
                    <text id="rank4" text="" font="Interface/Fonts/Default.fnt" align="left"/>
                </panel>    
            
                <panel id="column1" width="25%" childLayout="vertical">
                    <text text="Name" font="Interface/Fonts/Default.fnt" align="left"/>
                    
                    <panel id="spacer" height="5%"/>
                    <text id="name0" text="Teddy" font="Interface/Fonts/Default.fnt" align="left"/>
                    <panel id="spacer" height="5%"/>
                    <text id="name1" text="" font="Interface/Fonts/Default.fnt" align="left"/>
                    <panel id="spacer" height="5%"/>
                    <text id="name2" text="" font="Interface/Fonts/Default.fnt" align="left"/>
                    <panel id="spacer" height="5%"/>
                    <text id="name3" text="" font="Interface/Fonts/Default.fnt" align="left"/>
                    <panel id="spacer" height="5%"/>
                    <text id="name4" text="" font="Interface/Fonts/Default.fnt" align="left"/>
                </panel>
            
                <panel id="column2" width="25%" childLayout="vertical">
                   <text text="Kills" font="Interface/Fonts/Default.fnt" align="left"/>
                    
                    <panel id="spacer" height="5%"/>
                    <text id="kills0" text="0" font="Interface/Fonts/Default.fnt" align="left"/>
                    <panel id="spacer" height="5%"/>
                    <text id="kills1" text="" font="Interface/Fonts/Default.fnt" align="left"/>
                    <panel id="spacer" height="5%"/>
                    <text id="kills2" text="" font="Interface/Fonts/Default.fnt" align="left"/>
                    <panel id="spacer" height="5%"/>
                    <text id="kills3" text="" font="Interface/Fonts/Default.fnt" align="left"/>
                    <panel id="spacer" height="5%"/>
                    <text id="kills4" text="" font="Interface/Fonts/Default.fnt" align="left"/>
                </panel>
            
                <panel id="column3" width="25%" childLayout="vertical">
                    <text text="Deaths" font="Interface/Fonts/Default.fnt" align="left"/>
                    
                    <panel id="spacer" height="5%"/>
                    <text id="deaths0" text="0" font="Interface/Fonts/Default.fnt" align="left"/>
                    <panel id="spacer" height="5%"/>
                    <text id="deaths1" text="" font="Interface/Fonts/Default.fnt" align="left"/>
                    <panel id="spacer" height="5%"/>
                    <text id="deaths2" text="" font="Interface/Fonts/Default.fnt" align="left"/>
                    <panel id="spacer" height="5%"/>
                    <text id="deaths3" text="" font="Interface/Fonts/Default.fnt" align="left"/>
                    <panel id="spacer" height="5%"/>
                    <text id="deaths4" text="" font="Interface/Fonts/Default.fnt" align="left"/>
                </panel>
         
            </panel>
        
            <panel id="entries_bottom_panel" height="10%" width="75%" align="center" childLayout="center" backgroundColor="#0000"/>
        
        </layer>
    
    </screen>

</nifty>