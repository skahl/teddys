<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty.xsd http://nifty-gui.sourceforge.net/nifty.xsd">

  <useControls filename="nifty-default-controls.xml"/>
  <useStyles filename="nifty-default-styles.xml"/>
  
  <screen id="MAIN_MENU" controller="edu.teddys.menu.MainMenu">
      
    <layer id="background" backgroundColor="#000f">
       
    </layer>
    
        
    <layer id="entries" backgroundColor="#0000" childLayout="vertical">
    
        <panel id="top_panel" height="30%" width="100%" align="center" childLayout="center" visibleToMouse="true">  
            <image id="title" filename="Interface/GUI/title_nopicture_white.png" height="100%" width="100%"/>
        </panel>
        
        <panel id="bottom_panel" height="70%" width="100%" align="center" childLayout="horizontal">
            
            <panel id="spacer" height="100%" width="20%"/>
            
            <panel id="image_panel" height="100%" width="20%" align="center" childLayout="vertical" visibleToMouse="true">
                <panel id="spacer" height="15%" width="100%"/>
                <image id="teddy_image" filename="Interface/GUI/teddy2.png" />
                <panel id="spacer" height="30%" width="100%"/>
            </panel>
            
            <panel id="button_panel" height="100%" width="60%" align="center" childLayout="vertical">
                <interact onMouseOver="processMousePosition()"/>
                
                <panel id="spacer" height="25%" width="75%"/>
        
                <control name="button" label="Join Game" id="join_button" align="center" valign="top" visibleToMouse="true">
                    <interact onClick="showJoinScreen()"/>                
                </control>
            
                <panel id="spacer" height="5%" width="75%"/>
            
                <control name="button" label="Create Game" id="create_button" align="center" valign="center" visibleToMouse="true">
                    <interact onClick="showCreateScreen()"/>
                </control>
            
                <panel id="spacer" height="5%" width="75%"/>
            
                <control name="button" label="Options" id="options_button" align="center" valign="center" visibleToMouse="true">
                    <interact onClick="showOptionsScreen()"/>
                </control>
            
                <panel id="spacer" height="5%" width="75%"/>
            
                <control name="button" label="Credits" id="credits_button" align="center" valign="center" visibleToMouse="true">
                    <interact onClick="showCreditsScreen()"/>
                </control>
                
                <panel id="spacer" height="5%" width="75%"/>
            
                <control name="button" label="Exit" id="exit_button" align="center" valign="center" visibleToMouse="true">
                    <interact onClick="reallyQuit()"/>
                </control>
                
            </panel>

        </panel>
        
        
    </layer>
    
  </screen>

</nifty>